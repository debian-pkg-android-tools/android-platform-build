+++ b/libs/host/Makefile
@@ -0,0 +1,28 @@
+#!/bin/make
+
+CC = gcc
+
+SOURCES = CopyFile.c
+
+OBJECTS = $(SOURCES:.c=.o)
+
+ALL_CFLAGS += -fPIC -Iinclude \
+        -DANDROID_SMP=0 \
+		-include /usr/include/android/arch/linux-x86/AndroidConfig.h
+ALL_LDFLAGS += -fPIC -shared
+ALL_LIBS +=
+
+CFLAGS := $(ALL_CFLAGS) $(CFLAGS)
+LDFLAGS := $(ALL_LDFLAGS) $(LDFLAGS)
+LIBS := $(ALL_LIBS) $(LIBS)
+
+LIBNAME = libhost
+
+all: $(OBJECTS)
+	$(CC) $(LDFLAGS) -Wl,-soname,$(LIBNAME).so -o $(LIBNAME).so $(OBJECTS) $(LIBS)
+	ar rs $(LIBNAME).a $(OBJECTS)
+
+clean:
+	rm -f $(OBJECTS)
+	rm -f $(LIBNAME).so $(LIBNAME).a
+
